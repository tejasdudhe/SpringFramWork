<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
	
<bean id="addr1" class="bean.Address">
<property name="area" value="Sadashiv Peth"/>
<property name="city" value="Pune"/>
<property name="state" value="Maharashtra"/>
</bean>
<bean id="addr2" class="bean.Address">
<property name="area" value="MG Road"/>
<property name="city" value="Mumbai"/>
<property name="state" value="Maharashtra"/>
</bean>
<bean id="addr3" class="bean.Address">
<property name="area" value="Sita-burdy"/>
<property name="city" value="Nagpur"/>
<property name="state" value="Maharashtra"/>
</bean>
    
<bean id="employee" class="bean.Employee" autowire="byName">
<property name="ename" value="Amit"/>
</bean>
</beans>